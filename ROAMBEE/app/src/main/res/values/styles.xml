<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text View -->
    <style name="TextView_size_14sp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Text View -->
    <style name="TextView_size_17sp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text View -->
    <style name="TextView_size_20sp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!--<style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">-->
    <!--<item name="android:textColor">@color/black</item>-->
    <!--<item name="android:background">@color/white</item>-->
    <!--</style>-->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>
    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:divider">@null</item>

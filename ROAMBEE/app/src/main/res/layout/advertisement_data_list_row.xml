<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlAdvertisement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/margin_5dp">

        <ImageView
            android:id="@+id/ble_icon"
            android:layout_width="@dimen/image_view_width__height_20dp"
            android:layout_height="@dimen/image_view_width__height_20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bluetooth"
            android:visibility="invisible" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ble_icon">

            <TextView
                android:id="@+id/tvManufactureData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:text="@string/strManufactureData"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/tv_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvManufactureData"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>